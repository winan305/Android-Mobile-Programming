<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    tools:context="com.example.administrator.photogallery.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:padding="10dp"
        android:layout_margin="10dp"
        android:id="@+id/MAIN" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/MAIN"
        android:gravity="center">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:id="@+id/IMG_1"
            android:src="@drawable/java"
            android:onClick="selectImg"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:id="@+id/IMG_2"
            android:layout_toRightOf="@id/IMG_1"
            android:src="@drawable/python"
            android:onClick="selectImg"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:id="@+id/IMG_3"
            android:layout_toRightOf="@id/IMG_2"
            android:src="@drawable/cpp"
            android:onClick="selectImg"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:id="@+id/IMG_4"
            android:layout_toRightOf="@id/IMG_3"
            android:src="@drawable/js"
            android:onClick="selectImg"/>
    </LinearLayout>


</RelativeLayout>
